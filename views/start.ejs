    <script>
        const video = document.getElementById("intro-video");
        const intro = document.getElementById("intro");
        const mainContent = document.getElementById("main-content");

        // Video end event
        video.addEventListener("ended", () => {
            intro.style.display = "none";
            mainContent.style.display = "flex";
            document.body.style.overflow = "auto";
        });

        // Skip video on click (optional)
        intro.addEventListener("click", () => {
            intro.style.display = "none";
            mainContent.style.display = "flex";
            document.body.style.overflow = "auto";
        });

        // Create floating particles
        function createParticles() {
            const particlesContainer = document.getElementById("particles");
            const particleCount = 50;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement("div");
                particle.className = "particle";
                
                // Random size and position
                const size = Math.random() * 4 + 2;
                particle.style.width = size + "px";
                particle.style.height = size + "px";
                particle.style.left = Math.random() * 100 + "%";
                particle.style.animationDelay = Math.random() * 6 + "s";
                particle.style.animationDuration = (Math.random() * 3 + 4) + "s";
                
                particlesContainer.appendChild(particle);
            }
        }

        // Initialize particles when main content is shown
        function initializeAnimations() {
            createParticles();
            
            // Animate elements with staggered delays
            const fadeElements = document.querySelectorAll('.fade-in-up');
            fadeElements.forEach((element, index) => {
                element.style.animationDelay = (index * 0.2) + 's';
            });
        }

        // Check if video exists, if not show main content immediately
        video.addEventListener("error", () => {
            intro.style.display = "none";
            mainContent.style.display = "flex";
            document.body.style.overflow = "auto";
            initializeAnimations();
        });

        // If video loads successfully
        video.addEventListener("canplay", () => {
            console.log("Video ready to play");
        });

        // Fallback: Show main content after 5 seconds if video doesn't end
        setTimeout(() => {
            if (intro.style.display !== "none") {
                intro.style.display = "none";
                mainContent.style.display = "flex";
                document.body.style.overflow = "auto";
                initializeAnimations();
            }
        }, 5000);

        // Initialize animations when content is shown
        document.addEventListener("DOMContentLoaded", () => {
            if (mainContent.style.display === "flex") {
                initializeAnimations();
            }
        });
    </script>

