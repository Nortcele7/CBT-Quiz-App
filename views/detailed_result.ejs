<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Result - <%= test.testId %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen p-6 flex flex-col items-center">

  <h1 class="text-4xl font-extrabold text-gray-800 mb-6">Quiz Result: <%= test.testId %></h1>
  <h2 class="text-2xl font-semibold text-gray-700 mb-10">
    Total Points: <span class="text-blue-600"><%= test.totalPoints %></span> / <%= test.totalPossible %> |
    Score: <span class="text-green-600"><%= ((test.totalPoints / test.totalPossible) * 100).toFixed(2) %>%</span>
  </h2>

  <div class="w-full max-w-5xl space-y-6">
    <% for(let i = 0; i < test.questions.length; i++) { %>
      <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-200">
        <div class="flex justify-between items-center mb-2">
          <label class="block text-gray-800 font-semibold text-lg">Question <%= i + 1 %></label>
          <div class="flex space-x-4 items-center">
            <span class="text-gray-600 font-medium">Marks: <%= test.questions[i].marks %></span>
            <% if(test.tagsPerQuestion[i] === "Correct") { %>
              <span class="text-green-700 font-semibold">Obtained: <%= test.obtainedPerQuestion[i] %></span>
              <span class="text-green-700 font-medium"><%= test.tagsPerQuestion[i] %></span>
            <% } else if(test.tagsPerQuestion[i] === "Incorrect") { %>
              <span class="text-red-700 font-semibold">Obtained: <%= test.obtainedPerQuestion[i] %></span>
              <span class="text-red-700 font-medium"><%= test.tagsPerQuestion[i] %></span>
            <% } else { %>
              <span class="text-gray-600 font-semibold">Obtained: <%= test.obtainedPerQuestion[i] %></span>
              <span class="text-gray-600 font-medium"><%= test.tagsPerQuestion[i] %></span>
            <% } %>
          </div>
        </div>

        <input type="text" name="question" value="<%= test.questions[i].question %>" readonly
               class="w-full px-5 py-3 border rounded-lg bg-gray-50 text-gray-900 font-medium mb-4">

        <% test.questions[i].options.forEach(function(option, index){ %>
          <% 
            let bgClass = "bg-gray-50 border-gray-300 text-gray-800"; 
            if(index + 1 == test.questions[i].correctOption) {
              bgClass = "bg-green-200 border-green-400 text-green-800";
            } else if(test.answers[i] != undefined && index + 1 == test.answers[i] && test.answers[i] != test.questions[i].correctOption) {
              bgClass = "bg-red-200 border-red-400 text-red-800";
            }
          %>
          <div class="mb-2">
            <input type="text" value="<%= option %>" readonly
                   class="w-full px-4 py-2 border rounded-lg font-medium focus:outline-none <%= bgClass %>">
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

</body>
</html>
