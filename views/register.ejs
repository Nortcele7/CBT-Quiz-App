<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cohesion - Register</title>
  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  
  <style>
    * {
      font-family: 'Inter', sans-serif;
    }

    /* Oceanic Blue Background */
    .oceanic-bg {
      background: linear-gradient(-45deg, 
        #0f172a, 
        #1e293b, 
        #0ea5e9, 
        #0284c7, 
        #0369a1, 
        #1e40af);
      background-size: 400% 400%;
      animation: gradientShift 20s ease infinite;
      position: relative;
    }

    .oceanic-bg::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: radial-gradient(circle at 20% 80%, rgba(14, 165, 233, 0.3) 0%, transparent 50%),
                  radial-gradient(circle at 80% 20%, rgba(59, 130, 246, 0.3) 0%, transparent 50%),
                  radial-gradient(circle at 40% 40%, rgba(3, 105, 161, 0.2) 0%, transparent 50%);
      pointer-events: none;
      z-index: 1;
    }

    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    /* Silver Glow Animations */
    @keyframes silverPulse {
      0%, 100% { 
        box-shadow: 
          0 0 20px rgba(192, 192, 192, 0.3),
          0 0 40px rgba(192, 192, 192, 0.2),
          0 0 60px rgba(192, 192, 192, 0.1),
          inset 0 1px 0 rgba(192, 192, 192, 0.4);
      }
      50% { 
        box-shadow: 
          0 0 30px rgba(192, 192, 192, 0.5),
          0 0 60px rgba(192, 192, 192, 0.3),
          0 0 90px rgba(192, 192, 192, 0.2),
          inset 0 1px 0 rgba(192, 192, 192, 0.6);
      }
    }

    @keyframes silverShimmer {
      0% { 
        background-position: -200% center;
        opacity: 0;
      }
      50% { 
        opacity: 1;
      }
      100% { 
        background-position: 200% center;
        opacity: 0;
      }
    }

    /* Glass Morphism Card */
    .glass-card {
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(192, 192, 192, 0.3);
      box-shadow: 
        0 8px 32px 0 rgba(31, 38, 135, 0.37),
        inset 0 1px 0 rgba(192, 192, 192, 0.4),
        inset 0 -1px 0 rgba(192, 192, 192, 0.2),
        0 0 20px rgba(192, 192, 192, 0.15),
        0 0 40px rgba(192, 192, 192, 0.1);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
      animation: silverPulse 4s ease-in-out infinite;
    }

    .glass-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, 
        rgba(192, 192, 192, 0.3) 0%, 
        transparent 25%, 
        rgba(192, 192, 192, 0.2) 50%, 
        transparent 75%, 
        rgba(192, 192, 192, 0.3) 100%);
      pointer-events: none;
      opacity: 0.7;
    }

    /* Logo Container Enhancement */
    .logo-container {
      background: linear-gradient(135deg, 
        rgba(79, 70, 229, 0.8), 
        rgba(99, 102, 241, 0.8), 
        rgba(139, 92, 246, 0.8));
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(192, 192, 192, 0.4);
      box-shadow: 
        0 8px 32px 0 rgba(79, 70, 229, 0.3),
        inset 0 1px 0 rgba(192, 192, 192, 0.5),
        0 0 20px rgba(192, 192, 192, 0.2);
      transition: all 0.4s ease;
      position: relative;
      overflow: hidden;
    }

    .logo-container::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: conic-gradient(from 0deg, 
        transparent 0deg,
        rgba(192, 192, 192, 0.3) 90deg,
        transparent 180deg,
        rgba(255, 255, 255, 0.2) 270deg,
        transparent 360deg);
      animation: silverRotate 6s linear infinite;
      pointer-events: none;
      opacity: 0.6;
    }

    @keyframes silverRotate {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .logo-container:hover {
      transform: scale(1.05);
      box-shadow: 
        0 16px 40px 0 rgba(79, 70, 229, 0.4),
        inset 0 1px 0 rgba(192, 192, 192, 0.7),
        0 0 40px rgba(192, 192, 192, 0.3);
    }

    .logo-container:hover::before {
      opacity: 1;
      animation-duration: 3s;
    }

    /* Input Fields */
    .glass-input {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      border: 1px solid rgba(192, 192, 192, 0.3);
      box-shadow: 
        inset 0 1px 0 rgba(192, 192, 192, 0.2),
        0 0 10px rgba(192, 192, 192, 0.1);
      transition: all 0.3s ease;
      color: white;
      position: relative;
    }

    .glass-input::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }

    .glass-input:focus {
      outline: none;
      background: rgba(255, 255, 255, 0.15);
      border: 1px solid rgba(192, 192, 192, 0.5);
      box-shadow: 
        inset 0 1px 0 rgba(192, 192, 192, 0.4),
        0 0 20px rgba(192, 192, 192, 0.3),
        0 0 40px rgba(192, 192, 192, 0.1);
    }

    /* Buttons */
    .glass-button-primary {
      background: linear-gradient(135deg, rgba(79, 70, 229, 0.8), rgba(99, 102, 241, 0.8));
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(192, 192, 192, 0.4);
      box-shadow: 
        0 8px 32px 0 rgba(79, 70, 229, 0.3),
        inset 0 1px 0 rgba(192, 192, 192, 0.5),
        0 0 25px rgba(192, 192, 192, 0.2);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      color: white;
      font-weight: 600;
    }

    .glass-button-primary::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.4),
        rgba(192, 192, 192, 0.8), 
        rgba(255, 255, 255, 0.4),
        transparent);
      transition: left 0.8s ease;
      pointer-events: none;
    }

    .glass-button-primary:hover {
      background: linear-gradient(135deg, rgba(79, 70, 229, 0.9), rgba(99, 102, 241, 0.9));
      transform: translateY(-2px) scale(1.02);
      box-shadow: 
        0 16px 40px 0 rgba(79, 70, 229, 0.4),
        inset 0 1px 0 rgba(192, 192, 192, 0.7),
        0 0 50px rgba(192, 192, 192, 0.4);
    }

    .glass-button-primary:hover::before {
      left: 100%;
    }

    .glass-button-secondary {
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(192, 192, 192, 0.3);
      box-shadow: 
        0 8px 32px 0 rgba(31, 38, 135, 0.2),
        inset 0 1px 0 rgba(192, 192, 192, 0.3),
        0 0 15px rgba(192, 192, 192, 0.1);
      transition: all 0.3s ease;
      color: white;
      text-decoration: none;
    }

    .glass-button-secondary:hover {
      background: rgba(255, 255, 255, 0.15);
      transform: translateY(-1px);
      box-shadow: 
        0 12px 24px 0 rgba(31, 38, 135, 0.3),
        inset 0 1px 0 rgba(192, 192, 192, 0.5),
        0 0 25px rgba(192, 192, 192, 0.2);
      color: white;
      text-decoration: none;
    }

    /* Fade in animation */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .fade-in-up {
      animation: fadeInUp 0.8s ease-out forwards;
    }

    /* Floating particles */
    .particles {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: 1;
    }

    .particle {
      position: absolute;
      background: radial-gradient(circle, 
        rgba(192, 192, 192, 0.8) 0%, 
        rgba(255, 255, 255, 0.4) 30%, 
        transparent 70%);
      border-radius: 50%;
      animation: particleFloat 8s infinite linear;
      box-shadow: 
        0 0 10px rgba(192, 192, 192, 0.5),
        0 0 20px rgba(192, 192, 192, 0.3);
    }

    @keyframes particleFloat {
      0% {
        transform: translateY(100vh) rotate(0deg) scale(0);
        opacity: 0;
      }
      10% {
        opacity: 1;
        transform: translateY(90vh) rotate(36deg) scale(1);
      }
      90% {
        opacity: 1;
        transform: translateY(-10vh) rotate(324deg) scale(1);
      }
      100% {
        transform: translateY(-100px) rotate(360deg) scale(0);
        opacity: 0;
      }
    }

    /* Form Grid */
    .form-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    @media (max-width: 640px) {
      .form-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body class="oceanic-bg min-h-screen flex items-center justify-center relative py-8">
  <!-- Animated particles background -->
  <div class="particles" id="particles"></div>

  <div class="glass-card w-full max-w-lg rounded-3xl p-8 relative z-10 fade-in-up">
    <!-- Logo and Title -->
    <div class="text-center mb-8">
      <div class="logo-container w-20 h-20 mx-auto mb-4 rounded-2xl p-2 flex items-center justify-center">
        <img src="/images/cohesion_logo.png" alt="Cohesion Logo" class="w-full h-full object-contain rounded-xl relative z-10">
      </div>
      <h1 class="text-3xl font-bold text-white mb-2">Join Cohesion</h1>
      <p class="text-white/70">Create your account and start learning</p>
    </div>

    <form action="/create" method="post" class="space-y-6">
      <!-- Username Input -->
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
          <i class="fas fa-user text-white/50"></i>
        </div>
        <input type="text" name="username" placeholder="Username" required
               class="glass-input w-full pl-12 pr-4 py-4 rounded-xl text-white placeholder-white/70">
      </div>

      <!-- Email Input -->
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
          <i class="fas fa-envelope text-white/50"></i>
        </div>
        <input type="email" name="email" placeholder="Email Address" required
               class="glass-input w-full pl-12 pr-4 py-4 rounded-xl text-white placeholder-white/70">
      </div>

      <!-- Password and Confirm Password -->
      <div class="form-grid">
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <i class="fas fa-lock text-white/50"></i>
          </div>
          <input type="password" name="password" placeholder="Password" required
                 class="glass-input w-full pl-12 pr-4 py-4 rounded-xl text-white placeholder-white/70">
        </div>
        
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <i class="fas fa-lock text-white/50"></i>
          </div>
          <input type="password" name="confirm_password" placeholder="Confirm Password" required
                 class="glass-input w-full pl-12 pr-4 py-4 rounded-xl text-white placeholder-white/70">
        </div>
      </div>

      <!-- Age Input -->
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
          <i class="fas fa-calendar-alt text-white/50"></i>
        </div>
        <input type="number" name="age" placeholder="Age" required min="13" max="120"
               class="glass-input w-full pl-12 pr-4 py-4 rounded-xl text-white placeholder-white/70">
      </div>

      <!-- Register Button -->
      <button type="submit" class="glass-button-primary w-full py-4 rounded-xl font-semibold text-lg flex items-center justify-center gap-3">
        <i class="fas fa-user-plus"></i>
        Create Account
      </button>
    </form>

    <!-- Additional Links -->
    <div class="mt-8 text-center">
      <p class="text-white/70 mb-4">Already have an account?</p>
      <a href="/login" class="glass-button-secondary px-6 py-3 rounded-xl font-semibold inline-block">
        <i class="fas fa-sign-in-alt mr-2"></i>
        Sign In
      </a>
    </div>
  </div>

  <script>
    // Create floating particles
    function createParticles() {
      const particlesContainer = document.getElementById('particles');
      const particleCount = 25;

      for (let i = 0; i < particleCount; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';
        
        // Random size and position
        const size = Math.random() * 6 + 2;
        particle.style.width = size + 'px';
        particle.style.height = size + 'px';
        particle.style.left = Math.random() * 100 + '%';
        particle.style.animationDelay = Math.random() * 8 + 's';
        particle.style.animationDuration = (Math.random() * 4 + 6) + 's';
        
        particlesContainer.appendChild(particle);
      }
    }

    // Initialize particles when page loads
    document.addEventListener('DOMContentLoaded', createParticles);
  </script>
</body>
</html>
