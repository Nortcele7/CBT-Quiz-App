<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Result</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center p-6">

  <h1 class="text-4xl font-extrabold text-gray-800 mb-8">Quiz Result</h1>

  <% 
let totalPoints = 0;
let totalPossible = 0;
let obtainedPerQuestion = [];
let tagsPerQuestion = [];

for(let i = 0; i < questions.length; i++) {
    totalPossible += questions[i].marks;
    let obtained = 0;
    let tag = "";

    if(answers[i] === undefined || answers[i] === null || answers[i] === "") {
        obtained = 0;
        tag = "Unanswered";
    } else if(questions[i].correctOption == answers[i]) {
        obtained = questions[i].marks;
        tag = "Correct";
    } else {
        obtained = -questions[i].negativeMarks;
        tag = "Incorrect";
    }

    obtained = Math.round(obtained * 100) / 100;
    obtainedPerQuestion.push(obtained);
    tagsPerQuestion.push(tag);
    totalPoints += obtained;
    totalPoints = Math.round(totalPoints * 100) / 100;
}
%>



  <h2 class="text-2xl font-semibold text-gray-700 mb-10">
    Total Points: <span class="text-blue-600"><%= totalPoints %></span> / <%= totalPossible %>
  </h2>

  <div class="w-full max-w-3xl space-y-6">
    <% for(let i = 0; i < questions.length; i++) { %> 
      <form class="space-y-4 bg-white p-6 rounded-xl shadow-lg border border-gray-200">
        <div class="flex justify-between items-center mb-2">
          <label class="block text-gray-800 font-semibold text-lg">Question <%= i + 1 %></label>
          <div class="flex space-x-4 items-center">
            <span class="text-gray-600 font-medium">Marks: <%= questions[i].marks %></span>
            <% if(tagsPerQuestion[i] === "Correct") { %>
              <span class="text-green-700 font-semibold">Obtained: <%= obtainedPerQuestion[i] %></span>
              <span class="text-green-700 font-medium"><%= tagsPerQuestion[i] %></span>
            <% } else if(tagsPerQuestion[i] === "Incorrect") { %>
              <span class="text-red-700 font-semibold">Obtained: <%= obtainedPerQuestion[i] %></span>
              <span class="text-red-700 font-medium"><%= tagsPerQuestion[i] %></span>
            <% } else { %>
              <span class="text-gray-600 font-semibold">Obtained: <%= obtainedPerQuestion[i] %></span>
              <span class="text-gray-600 font-medium"><%= tagsPerQuestion[i] %></span>
            <% } %>
          </div>
        </div>

        <input type="text" name="question" value="<%= questions[i].question %>" readonly disabled
               class="w-full px-5 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 bg-gray-50 text-gray-900 font-medium">

        <% questions[i].options.forEach(function(option, index){ %>
          <% 
            let bgClass = "bg-gray-50 border-gray-300 text-gray-800"; 
            if(index + 1 == questions[i].correctOption) {
              bgClass = "bg-green-200 border-green-400 text-green-800";
            } else if(answers[i] != undefined && index + 1 == answers[i] && answers[i] != questions[i].correctOption) {
              bgClass = "bg-red-200 border-red-400 text-red-800";
            }
          %>
          <div>
            <input type="text" name="option" value="<%= option %>"
                   class="w-full px-4 py-2 mb-2 border rounded-lg font-medium focus:outline-none <%= bgClass %>" readonly disabled>
          </div>
        <% }) %>
      </form>
    <% } %>
  </div>

</body>
</html>
