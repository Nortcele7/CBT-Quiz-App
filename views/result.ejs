<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Result</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex flex-col items-center p-6">

    <h1 class="text-4xl font-extrabold text-gray-800 mb-8">Quiz Result</h1>

    <% var points = 0 %>
    <% for(var i = 0; i < questions.length ; i++) { %> 
      <% if((questions[i].correctOption)==answers[i]) {%> 
        <% points = points + questions[i].marks %> 
      <%} else{ %> 
        <% points = points - questions[i].negativeMarks %> 
      <% } %>
    <% } %>

    <h2 class="text-2xl font-semibold text-gray-700 mb-10">Total Points: <span class="text-blue-600"><%= points %></span></h2>

    <div class="w-full max-w-3xl space-y-6">
      <% for(var i = 0; i < questions.length ; i++) { %> 
        <form class="space-y-4 bg-white p-6 rounded-xl shadow-lg border border-gray-200">
          
          <div>
            <label class="block text-gray-800 font-semibold mb-2 text-lg">Question <%= i+1 %></label>
            <input type="text" name="question" value="<%=questions[i].question%>" readonly disabled
                   class="w-full px-5 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 bg-gray-50 text-gray-900 font-medium">
          </div>

          <% questions[i].options.forEach(function(option,index){ %>
            <% if((index+1) == questions[i].correctOption) {%> 
              <div>
                <input type="text" name="option" value="<%=option%>"
                       class="w-full px-4 py-2 mb-2 border rounded-lg bg-green-200 border-green-400 text-green-800 font-medium focus:outline-none" readonly disabled>
              </div>
            <%} else if((index+1) == answers[i] && answers[i] != questions[i].correctOption) { %>
              <div>
                <input type="text" name="option" value="<%=option%>"
                       class="w-full px-4 py-2 mb-2 border rounded-lg bg-red-200 border-red-400 text-red-800 font-medium focus:outline-none" readonly disabled>
              </div>
            <% }else {%>
              <div>
                <input type="text" name="option" value="<%=option%>"
                       class="w-full px-4 py-2 mb-2 border rounded-lg bg-gray-50 border-gray-300 text-gray-800 focus:outline-none" readonly disabled>
              </div>
            <%} })%>

        </form>
      <%}%>
    </div>

  </body>
</html>
